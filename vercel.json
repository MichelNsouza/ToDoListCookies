{
  "version": 2,
  "builds": [
      { "src": "/api/index.php", "use": "vercel-php@0.6.0" },
      { "src": "/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/controller/(.*)", "dest": "/controller/$1" },
    { "src": "/view/component/(.*)", "dest": "/view/component/$1" },
    { "src": "/view/html/(.*)", "dest": "/view/html/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}
